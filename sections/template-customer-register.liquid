<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Register an account</h1>
    </div>
    <div class="mt-8">
      {% form 'create_customer' %}
        {% if form.errors %}
          <div class="relative border border-red-400 bg-red-100 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Eror!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}

        <div class="my-2">
          <label for="first_name" class="sr-only">First Name</label>
          <input
            type="text"
            name="customer[first_name]"
            id="first_name"
            autocomplete="given-name"
            class="relative block w-full px-3 py-2 border rounded-lg"
            placeholder="First Name">
        </div>

        <div class="my-2">
          <label for="last_name" class="sr-only">Last Name</label>
          <input
            type="text"
            name="customer[last_name]"
            id="last_name"
            autocomplete="family-name"
            class="relative block w-full px-3 py-2 border rounded-lg"
            placeholder="Last Name">
        </div>

        <div class="my-2">
          <label for="email_address" class="sr-only">Email</label>
          <input
            type="email"
            name="customer[email]"
            id="email_address"
            autocomplete="email"
            class="relative block w-full px-3 py-2 border rounded-lg"
            placeholder="Email">
        </div>

        <div class="my-2">
          <label for="password" class="sr-only">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            autocomplete="new-password"
            class="relative block w-full px-3 py-2 border rounded-lg"
            placeholder="Password">
        </div>

        <div class="my-2">
          <button type="submit" class="relative w-full py-2 px-4 text-sm font-medium text-white bg-gray-900 hover:bg-gray-700">Create account</button>
        </div>

        <div class="my-2 flex justify-between">
          <a
            x-on:click="pwRecoverForm  = true;  loginForm = false"
            class="text-gray-600 text-sm hover:underline hover:text-gray-900"
            href="{{ routes.account_login_url }}">
            Do you have an account? Sign in now
          </a>
        </div>
      {% endform %}
    </div>
  </div>
</div>
